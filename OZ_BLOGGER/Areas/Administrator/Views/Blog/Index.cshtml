@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/AdminLayout.cshtml";
}

@using OZ_BLOGGER.Models.Entity;
@model List<Blog>

@functions
{
    string shortenText(string text)
    {
        if (text.Length > 400) { return text.Substring(0, 400) + "..."; }
        else { return text + "..."; }
    }
}

<!-- Blog-listing -->
<div class="row col-lg-12">
    <h2>Blog Operations</h2>
</div>
<!-- active-blogs -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="display: flex; flex-direction: row; justify-content: space-between; align-items: center;">
                <div>Active Blogs</div>
                <span data-toggle="modal" data-target="#addModal" class="btn btn-primary pull-right">Add Blog</span>
            </div>
            <!-- /.panel-header -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Category</th>
                                <th>Author</th>
                                <th>Comments</th>
                                <th>Tags</th>
                                <th>Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 1;
                                foreach (Blog item in Model.Where(x => x.isActive == true))
                                {
                                <tr>
                                    <td>@index</td>
                                    <td>@item.BlogTitle</td>
                                    <td>@shortenText(@item.BlogContent)</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <button class="btn btn-success">Update</button>
                                        @Html.ActionLink("Pacify", "Pacify", "Category",
                                        new { @Id = @item.BlogId }, new { @class = "btn btn-warning" })
                                    </td>
                                </tr>
                                    index += 1;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
